html(lang='en', class='mdl-js')
	head
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title=title
		link(href='https://storage.googleapis.com/code.getmdl.io/1.0.0/material.pink-light_green.min.css', rel='stylesheet')
		link(href='assets/style.css', rel='stylesheet')
		script(src='https://storage.googleapis.com/code.getmdl.io/1.0.0/material.min.js')
		link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
	body(class='mdl-demo mdl-color--grey-100 mdl-color-text--grey-700 mdl-base')
		div(class='mdl-layout__container has-fixed-header')
			div(class='mdl-layout mdl-js-layout mdl-layout--fixed-header has-tabs is-upgraded')
				header(class='mdl-layout__header mdl-layout__header--scroll mdl-color--primary')
					div(class='mdl-layout--large-screen-only mdl-layout__header-row')
					div(class='mdl-layout--large-screen-only mdl-layout__header-row')
						h3=title
					div(class='mdl-layout--large-screen-only mdl-layout__header-row')
						h4=description
					div(class='mdl-layout--large-screen-only mdl-layout__header-row')
				main(class='mdl-layout__content')
					div(class='mdl-layout__tab-panel is-active')
						section(class='section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp')
							div(class='mdl-card mdl-cell mdl-cell--12-col')
								div(class='mdl-card__supporting-text')
									h4 Call your friend
									span Give the following url to your friend to start working.
						div(class='mdl-card mdl-shadow--2dp demo-card-image')
							div(class='mdl-card__title mdl-card--expand')
							div(class='mdl-card__actions')
								span(class='demo-card-image__filename')=lastPage
								//- div(class='mdl-card__actions')
									a(class='mdl-button', href='#') Call
						//- section(class='section--footer mdl-color--white mdl-grid')
							div(class='section__circle-container mdl-cell mdl-cell--2-col mdl-cell--1-col-phone')
								div(class='section__circle-container__circle mdl-color--accent section__circle--big')
							div(class='section__text mdl-cell mdl-cell--4-col-desktop mdl-cell--6-col-tablet mdl-cell--3-col-phone')
